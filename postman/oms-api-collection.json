        {
            "name": "Products",
            "item": [
                {
                    "name": "List All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Product by ID",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('product_id', response.id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Product (Supplier)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('product_id', response.id);",
                                    "    console.log('Product created with ID:', response.id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test Product via API\",\n  \"description\": \"Product created through Postman\",\n  \"baseUom\": \"GRAM\",\n  \"conversionFactorToBase\": 1,\n  \"pricePerBaseUom\": 0.01,\n  \"sku\": \"TEST-API-001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/products",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Product Stock",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"quantity\": 5,\n  \"uom\": \"KILOGRAM\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/products/{{product_id}}/stock",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products",
                                "{{product_id}}",
                                "stock"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order (Buyer)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('order_id', response.id);",
                                    "    console.log('Order created with ID:', response.id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
