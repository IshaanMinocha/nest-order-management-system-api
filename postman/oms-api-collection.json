                    "name": "List Orders for Supplier",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders?supplierId=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "supplierId",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                }
            ]
        },
